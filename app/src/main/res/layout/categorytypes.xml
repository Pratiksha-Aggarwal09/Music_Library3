<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/ll_category_root" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="4dp">
    <androidx.cardview.widget.CardView android:layout_gravity="center_horizontal"
        android:id="@+id/iv_category_thumb_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        app:cardCornerRadius="4dp">

        <ImageView
            android:id="@+id/iv_category_thumb"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/design_default_color_primary_dark"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:textColor="@color/white"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp" android:maxLines="2"
        android:layout_below="@+id/iv_category_thumb_layout"
        android:layout_alignLeft="@+id/iv_category_thumb_layout"
        android:layout_alignRight="@+id/iv_category_thumb_layout"
        android:layout_alignStart="@+id/iv_category_thumb_layout"
        android:layout_alignEnd="@+id/iv_category_thumb_layout"/>
</RelativeLayout>